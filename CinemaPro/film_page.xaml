<Page x:Class="CinemaPro.film_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaPro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="film_page">

    <Grid DataContext="{Binding filmSessions}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>    
            <RowDefinition Height="4*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Name}"/>
        <Image Grid.Column="1" Grid.Row="2"  Source="{Binding Image}"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding FilmCompany_ID}"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding DateTime}"/>
        <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding Country_ID}"/>
        <Button Grid.Column="1" Grid.Row="6" Content="Забронировать"/>
    </Grid>
</Page>
